{
  "buildCommand": "npx prisma generate && next build",
  "installCommand": "npm install --no-audit --prefer-offline",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [],
  "functions": {
    "app/api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "PRISMA_BINARY_TARGETS": "debian-openssl-3.0.x,linux-arm64-openssl-3.0.x"
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "dev": false
    }
  }
} 