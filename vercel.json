{
  "buildCommand": "npx prisma generate && next build",
  "installCommand": "npm install --no-audit",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [],
  "functions": {
    "app/api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "PRISMA_CLI_BINARY_TARGETS": "native,debian-openssl-3.0.x",
      "PRISMA_CLIENT_ENGINE_TYPE": "binary"
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "dev": false
    }
  }
} 